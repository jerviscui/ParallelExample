<Window x:Class="WpfApp.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="800">
    <Grid>
        <Button Name="startBtn" Content="Start Downloading" Height="46" Width="225" Margin="12, 12, 0, 0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="startBtn_Click"></Button>
        <Button Name="cancelBtn" Content="Cancel Downloading" Height="46" Width="166" Margin="325, 12, 0,0" VerticalAlignment="Top" HorizontalAlignment="Left" IsEnabled="False" Click="cancelBtn_Click"></Button>
        <ListBox Margin="12,64,15,2" Name="listStatus"></ListBox>
    </Grid>
</Window>
